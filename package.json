    "threejs",
    "3d",
    "open-surface",
    "dtm",
    "triangulation"
  ],
  "author": "Brent Buffham",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brentbuffham/trimesh-boolean.git"
  },
  "dependencies": {
    "@kninnug/constrainautor": "^4.0.1",
    "delaunator": "^5.0.1"
